{
    "name": "amneale/dns-updater",
    "description": "DNS updater",
    "type": "project",
    "authors": [
        {
            "name": "Adam Neale",
            "email": "adam@adam-neale.co.uk"
        }
    ],
    "require": {
        "php": "^7.0",
        "toin0u/digitalocean-v2": "^2.2",
        "symfony/console": "^3.3",
        "beberlei/assert": "^2.7",
        "guzzlehttp/guzzle": "^6.3",
        "symfony/dependency-injection": "^3.3",
        "symfony/config": "^3.3",
        "incenteev/composer-parameter-handler": "^2.1",
        "symfony/monolog-bundle": "^3.1",
        "symfony/cache": "^3.3"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.4",
        "behat/behat": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "DnsUpdater\\": "src/DnsUpdater"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fake\\": "features/bootstrap/fake"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "bin": ["bin/update-dns"],
    "extra": {
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
